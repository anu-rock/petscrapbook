<Page loaded="onLoaded">
    <ScrollView>
        <StackLayout>
            <Label class="h1 text-center" text="{{ header }}" />
            <Image src="~/images/home.png" />
            <Label class="footnote text-center" text="{{ footer }}" />
            <StackLayout orientation="horizontal" horizontalAlignment="center" >
                <Button class="btn btn-primary btn-rounded-sm btn-active m-y-10" text="About" />
                <Button class="btn btn-primary btn-rounded-sm btn-active m-y-10" text="Continue"
                    ontap="onContinueTap" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</Page>